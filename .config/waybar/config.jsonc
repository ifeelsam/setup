{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 30,
    
    "modules-left": [ "custom/app-menu", "hyprland/window", "custom/files", "custom/browser", "custom/chats", "custom/terminal", "custom/clipboard" ],
    "modules-center": [],
    "modules-right": [ "custom/media", "tray", "pulseaudio", "network" ,"battery",  "custom/recording", "custom/do-not-disturb", "clock" ],
    
    "custom/app-menu": {
      "format": " ",
      "on-click": "~/.config/rofi/rofi-app-menu/app-menu",
      "tooltip": false
    },

    "hyprland/window": {
      "format": "{initialTitle}",
      "rewrite": {
        "": "Home",
        "alacritty": "Terminal",
        "Mozilla Firefox": "Firefox",
        "chat.openai.com_/": "ChatGPT 3.5",
        "web.whatsapp.com_/": "Whatsapp Web",
        "neofetch": "About PC",
        "Enter name of file to save to…": "Save File",
        "Beeper (.*)": "Beeper",
        // "(.*) Thorium": "Thorium",
        "Spotify Free": "Spotify"
      },
      "tooltip": false
    },

    "custom/files": {
      "format": "Files",
      "on-click": "nautilus",
      "tooltip": false
    },
    
    "custom/browser": {
      "format": "Browser",
      "on-click": "firefox",
      "tooltip": false
    },
    "network": {
    	"interface": "wlan0",
	    "format": "{ifname}",
	    "format-wifi": "",
	    "format-ethernet": "{ifname} ",
	    "tooltip-format": "{ifname}",
      "format-disconnected": "",
	    "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
	    "tooltip-format-ethernet": "{ifname} ",
	    "tooltip-format-disconnected": "Disconnected",
	    "max-length": 50,
    },
    "custom/chats": {
      "format": "Chats",
      "on-click": "vesktop",
      "tooltip": false
    },

    "custom/terminal": {
      "format": "Terminal",
      "on-click": "alacritty",
      "tooltip": false
    },

    "custom/clipboard": {
      "format": "Clipboard",
      "on-click": "cliphist list | rofi -dmenu | cliphist decode | wl-copy",
      "tooltip": false
    },

    "custom/configuration": {
      "format": "Configuration",
      "on-click": "alacritty zsh -i -c 'lf ~/.config'",
      "tooltip": false
    },

    "custom/media": {
      "format": "{}",
      "escape": true,
      "return-type": "json",
      "max-length": 20,
      "exec": "$HOME/.config/Scripts/mediaplayer.py 2> /dev/null",
      "tooltip": false
    },

    "pulseaudio": {
      "format": "{icon}   {volume}%",
      "format-bluetooth": "{icon} 󰂰  {volume}%",
      "format-muted": "󰖁",
      "format-icons": {
          "headphone": "",
          "hands-free": "",
          "headset": "",
          "phone": "",
          "portable": "",
          "car": "",
      "default": ["", "", "󰕾", ""], 
      "ignored-sinks": ["Easy Effects Sink"],
      },
    "scroll-step": 5.0,
    "on-click": "pavucontrol -t 3",
    "on-click-middle": "~/.config/hypr/scripts/Volume.sh --toggle",
    "on-click-right": "pavucontrol -t 3",
    "on-scroll-up": "~/.config/hypr/scripts/Volume.sh --inc",
    "on-scroll-down": "~/.config/hypr/scripts/Volume.sh --dec",
	  "tooltip-format": "{icon} {desc} | {volume}%",
    "smooth-scrolling-threshold": 1,
},
        
    "pulseaudio#microphone": {
      "format": "{format_source}",
      "format-source": " {volume}%",
      "format-source-muted": "",
      "on-click": "~/.config/hypr/scripts/Volume.sh --toggle-mic",
      "on-click-right": "pavucontrol -t 4",
      "on-scroll-up": "~/.config/hypr/scripts/Volume.sh --mic-inc",
      "on-scroll-down": "~/.config/hypr/scripts/Volume.sh --mic-dec",
	  "tooltip-format": "{source_desc} | {source_volume}%",
      "scroll-step": 5,
    },

    "battery": {
      "bat": "BAT0",
      "interval": 60,
      "states": {
        "critical": 15
      },
      "icon-size": 20,
      "format": "{icon}",
      "format-icons": [" ", " ", " ,", " ", " "],
      "format-charging": "  {capacity}%",
      "format-critical": " {capacity}%",
      "tooltip": false
    },

    "tray": {
      "icon-size": 20,
      "spacing": 9,
      "tooltip": false
    },
    
    "custom/chatgpt": {
      "format": " ",
      "on-click": "firefox --new-tab https://claude.ai --disable-gpu",
      "tooltip": false
    },

    "custom/all-apps": {
      "format": " ",
      "on-click": "rofi -show drun",
      "tooltip": false
    },

    "custom/recording": {
      "exec": "~/.config/Scripts/recording-status.sh",
      "return-type": "json",
      "format": "{icon}",
      "format-icons": {
        "true": "󰻃    Screen Recording",
        "false": ""
      },
      "interval": "once",
      "signal": 2
    },

    "custom/do-not-disturb": {
      "exec": "~/.config/Scripts/dnd-status",
      "return-type": "json",
      "format": "{icon}",
      "format-icons": {
        "true": "    Do Not Distub On",
        "false": ""
      },
      "interval": "once",
      "signal": 1
    },

    "clock": {
      "interval": 60,
      "format": "{:%a %b %d %H:%M}",
      "tooltip": false
    }
}
